pipeline {
    agent any
    environment {
        CURRENT_WORKSPACE = "${env.WORKSPACE}"
    }
    stages {
        stage('prepare') {
            steps {
                httpRequest contentType: 'APPLICATION_JSON', httpMode: 'POST', requestBody:  """{"stageName":"test.prepare.service","start":${new Date().getTime()}}""", url: "http://localhost:8022/"
                dir('webServer') {
                    sh "npm set registry http://localhost:4872/"
                    sh "npm install"
                }
                httpRequest contentType: 'APPLICATION_JSON', httpMode: 'POST', requestBody: """{"stageName":"test.prepare.service","end":${new Date().getTime()}}""", url: "http://localhost:8022/"
            }
        }
        stage('build') {
            steps {
                httpRequest contentType: 'APPLICATION_JSON', httpMode: 'POST', requestBody:  """{"stageName":"test.build.service","start":${new Date().getTime()}}""", url: "http://localhost:8022/"
                dir('webServer') {
                    sh "npm run build:test"
                }
                httpRequest contentType: 'APPLICATION_JSON', httpMode: 'POST', requestBody: """{"stageName":"test.build.service","end":${new Date().getTime()}}""", url: "http://localhost:8022/"
            }
        }

        stage('serviceTest') {
            steps {
                httpRequest contentType: 'APPLICATION_JSON', httpMode: 'POST', requestBody:  """{"stageName":"test.test.service","start":${new Date().getTime()}}""", url: "http://localhost:8022/"
                dir('webServer') {
                    sh "npm run test:test:service"
                }
                httpRequest contentType: 'APPLICATION_JSON', httpMode: 'POST', requestBody: """{"stageName":"test.test.service","end":${new Date().getTime()}}""", url: "http://localhost:8022/"
            }
        }
    }
}
